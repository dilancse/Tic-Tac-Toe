<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tic_tac_toe.MainActivity" 
    android:background="@drawable/background_1"
    >

    <View
        android:id="@+id/view1"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/view2"
        android:layout_below="@+id/view2"
        android:layout_marginTop="80dp"
        android:background="@drawable/gradient" />

    <View
        android:id="@+id/view3"
        android:layout_width="1dp"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@+id/view4"
        android:background="@drawable/gradient_vert" />

    <View
        android:id="@+id/view4"
        android:layout_width="1dp"
        android:layout_height="240dp"
        android:layout_alignLeft="@+id/view1"
        android:layout_alignTop="@+id/view3"
        android:layout_marginLeft="80dp"
        android:background="@drawable/gradient_vert" />

    <View
        android:id="@+id/view2"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:background="@drawable/gradient" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignTop="@+id/view4"
        android:layout_toLeftOf="@+id/button5"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="70dp" />

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_alignTop="@+id/view3"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toRightOf="@+id/view4"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="70dp" />

    <Button
        android:id="@+id/button3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view2"
        android:layout_alignRight="@+id/view2"
        android:layout_alignTop="@+id/view3"
        android:layout_toRightOf="@+id/view3"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="70dp" />

    <Button
        android:id="@+id/button4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view1"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignRight="@+id/view4"
        android:layout_below="@+id/view2"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="70dp" />

    <Button
        android:id="@+id/button5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view1"
        android:layout_alignLeft="@+id/view4"
        android:layout_alignTop="@+id/view2"
        android:layout_toLeftOf="@+id/button6"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="70dp" />

    <Button
        android:id="@+id/button6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view1"
        android:layout_alignLeft="@+id/view3"
        android:layout_alignRight="@+id/view1"
        android:layout_alignTop="@+id/button5"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="70dp" />

    <Button
        android:id="@+id/button7"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view4"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/view1"
        android:layout_toLeftOf="@+id/button5"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="70dp" />

    <Button
        android:id="@+id/button8"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view4"
        android:layout_alignTop="@+id/button7"
        android:layout_toLeftOf="@+id/button6"
        android:layout_toRightOf="@+id/button7"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="70dp" />

    <Button
        android:id="@+id/button9"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view3"
        android:layout_alignLeft="@+id/view3"
        android:layout_alignRight="@+id/view1"
        android:layout_alignTop="@+id/button8"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="70dp" />

</RelativeLayout>
